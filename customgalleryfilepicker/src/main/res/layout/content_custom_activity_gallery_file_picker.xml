<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CustomActivityGalleryFilePicker"
    tools:showIn="@layout/app_bar_custom_activity_gallery_file_picker">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresMainGridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/ActivityGridViewGalleryFile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="false"
            android:columnWidth="140dp"
            android:horizontalSpacing="5dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="5dp">

        </GridView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/DataKosongTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:visibility="gone" />

</LinearLayout>